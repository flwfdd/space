---
import { Icon } from "astro-icon/components";

export interface Props {
  class?: string;
}

const { class: className = "" } = Astro.props;
---

<footer
  class={`
  w-fullmt-16
  ${className}
`}
>
  <div class="w-full h-2 bg-cyan-500/10"></div>
  <div class="w-full h-3 bg-cyan-500/20"></div>
  <div class="w-full h-4 bg-cyan-500/30"></div>
  <div class="w-full h-5 bg-cyan-500/40"></div>
  <div class="w-full bg-cyan-500/50">
    <div class="flex flex-col items-center space-y-8 max-w-6xl mx-auto p-6">
      <div class="text-center space-y-3">
        <p>Made with ❤️ by flwfdd</p>
      </div>

      <div class="flex space-x-4">
        <a
          href="https://github.com/flwfdd"
          target="_blank"
          rel="noopener noreferrer"
          class="group flex items-center space-x-2 px-4 py-2 rounded-lg
            text-gray-600 font-medium text-sm
            hover:text-gray-800"
        >
          <Icon
            name="mdi:github"
            class="w-4 h-4 group-hover:scale-110 transition-transform duration-200"
          />
          <span>GitHub</span>
        </a>

        <a
          href="mailto:flwfdd@foxmail.com"
          class="group flex items-center space-x-2 px-4 py-2 rounded-lg
            text-gray-600 font-medium text-sm
            hover:text-cyan-600"
        >
          <Icon
            name="mdi:email"
            class="w-4 h-4 group-hover:scale-110 transition-transform duration-200"
          />
          <span>联系我</span>
        </a>
      </div>
    </div>
  </div>
</footer>
